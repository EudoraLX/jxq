    <sql id="selectErpInventoryVo">
        select id, material_id, warehouse_id, warehouse_code, warehouse_name, total_quantity, available_quantity, allocated_quantity, frozen_quantity, on_order_quantity, unit_cost, total_cost, safety_stock, max_stock, min_stock, last_in_date, last_out_date, last_count_date, shelf_life, expiry_date, is_active, remark, create_by, create_time, update_by, update_time from erp_inventory
    </sql>

    <select id="selectErpInventoryList" parameterType="ErpInventory" resultMap="ErpInventoryResult">
        <include refid="selectErpInventoryVo"/>
        <where>  
            <if test="materialId != null "> and material_id = #{materialId}</if>
            <if test="warehouseId != null "> and warehouse_id = #{warehouseId}</if>
            <if test="warehouseCode != null  and warehouseCode != ''"> and warehouse_code like concat('%', #{warehouseCode}, '%')</if>
            <if test="warehouseName != null  and warehouseName != ''"> and warehouse_name like concat('%', #{warehouseName}, '%')</if>
            <if test="totalQuantity != null "> and total_quantity = #{totalQuantity}</if>
            <if test="availableQuantity != null "> and available_quantity = #{availableQuantity}</if>
            <if test="allocatedQuantity != null "> and allocated_quantity = #{allocatedQuantity}</if>
