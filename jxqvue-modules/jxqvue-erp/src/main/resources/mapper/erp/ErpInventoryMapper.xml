            <if test="lastOutDate != null "> and last_out_date = #{lastOutDate}</if>
            <if test="lastCountDate != null "> and last_count_date = #{lastCountDate}</if>
            <if test="isActive != null  and isActive != ''"> and is_active = #{isActive}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectErpInventoryById" parameterType="Long" resultMap="ErpInventoryResult">
