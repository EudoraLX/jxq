    </select>

    <select id="selectErpInventoryAlertList" parameterType="ErpInventory" resultMap="ErpInventoryResult">
        <include refid="selectErpInventoryVo"/>
        <where>  
            and (available_quantity &lt; safety_stock or available_quantity &gt; max_stock)
            <if test="materialId != null "> and material_id = #{materialId}</if>
            <if test="warehouseId != null "> and warehouse_id = #{warehouseId}</if>
        </where>
        order by available_quantity asc
    </select>

