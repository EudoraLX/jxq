    <sql id="selectErpProductionOrderVo">
        select po.id, po.order_code, po.order_name, po.order_type, po.product_id, po.bom_id, po.process_route_id, po.unit_id, po.planned_quantity, po.completed_quantity, po.scrapped_quantity, po.remaining_quantity, po.planned_start_date, po.planned_end_date, po.actual_start_date, po.actual_end_date, po.priority, po.status, po.remark, po.create_by, po.create_time, po.update_by, po.update_time,
               mm.material_code as product_code, mm.material_name as product_name,
               bom.bom_code, bom.bom_name,
               pr.process_route_code, pr.process_route_name,
               u.unit_code, u.unit_name
        from erp_production_order po
        LEFT JOIN erp_material_master mm ON po.product_id = mm.id AND mm.is_active = '1'
        LEFT JOIN erp_bom bom ON po.bom_id = bom.id
        LEFT JOIN erp_process_route pr ON po.process_route_id = pr.id
        LEFT JOIN erp_unit u ON po.unit_id = u.id AND u.status = '1'
    </sql>

    <select id="selectErpProductionOrderList" parameterType="ErpProductionOrder" resultMap="ErpProductionOrderResult">
        <include refid="selectErpProductionOrderVo"/>
        <where>  
            <if test="orderCode != null  and orderCode != ''"> and po.order_code like concat('%', #{orderCode}, '%')</if>
            <if test="orderName != null  and orderName != ''"> and po.order_name like concat('%', #{orderName}, '%')</if>
            <if test="orderType != null  and orderType != ''"> and po.order_type = #{orderType}</if>
            <if test="productId != null "> and po.product_id = #{productId}</if>
            <if test="bomId != null "> and po.bom_id = #{bomId}</if>
            <if test="processRouteId != null "> and po.process_route_id = #{processRouteId}</if>
            <if test="unitId != null "> and po.unit_id = #{unitId}</if>
            <if test="status != null  and status != ''"> and po.status = #{status}</if>
            <if test="params.beginPlannedStartDate != null and params.beginPlannedStartDate != '' and params.endPlannedStartDate != null and params.endPlannedStartDate != ''"> and po.planned_start_date between #{params.beginPlannedStartDate} and #{params.endPlannedStartDate}</if>
        </where>
    </select>
    
    <select id="selectErpProductionOrderById" parameterType="Long" resultMap="ErpProductionOrderErpProductionOrderDetailResult">
        <include refid="selectErpProductionOrderVo"/>
        where po.id = #{id}
    </select>

    <select id="selectErpProductionOrderDetailList" resultMap="ErpProductionOrderDetailResult">
        select d.id, d.order_id, d.process_id, d.process_order, d.work_center_id, d.equipment_id, d.mold_id, d.planned_duration, d.actual_duration, d.operator_id, d.mold_setup_time, d.mold_removal_time, d.temperature_control_time, d.pressure_control_time, d.quality_check_time, d.status, d.start_time, d.end_time, d.remark, d.create_by, d.create_time, d.update_by, d.update_time,
               p.process_name,
               wc.work_center_name,
               e.equipment_name,
               m.mold_name
        from erp_production_order_detail d
        LEFT JOIN erp_process p ON d.process_id = p.id
        LEFT JOIN erp_work_center wc ON d.work_center_id = wc.id
        LEFT JOIN erp_equipment e ON d.equipment_id = e.id
        LEFT JOIN erp_mold m ON d.mold_id = m.id
        where d.order_id = #{id}
        ORDER BY d.process_order ASC
    </select>

    <select id="selectErpProductionOrderMaterialsList" resultMap="ErpProductionOrderMaterialsResult">
