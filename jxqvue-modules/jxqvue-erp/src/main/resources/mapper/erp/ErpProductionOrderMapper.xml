    <!-- 查询生产订单对应的工序列表 -->
    <select id="selectOrderProcesses" parameterType="Long" resultType="java.util.Map">
        SELECT 
            p.id,
            p.process_code,
            p.process_name,
            pod.process_order,
            pod.work_center_id,
            pod.equipment_id,
            pod.mold_id,
            pod.planned_duration,
            pod.actual_duration,
            pod.operator_id,
            pod.status as detail_status,
            wc.work_center_code,
            wc.work_center_name,
            e.equipment_code,
            e.equipment_name,
            m.mold_code,
            m.mold_name
        FROM erp_production_order_detail pod
        LEFT JOIN erp_process p ON pod.process_id = p.id
        LEFT JOIN erp_work_center wc ON pod.work_center_id = wc.id
        LEFT JOIN erp_equipment e ON pod.equipment_id = e.id
        LEFT JOIN erp_mold m ON pod.mold_id = m.id
        WHERE pod.order_id = #{orderId}
        ORDER BY pod.process_order ASC
    </select>

