    <sql id="selectErpInventoryCountVo">
        select id, count_no, count_name, count_type, warehouse_id, warehouse_code, warehouse_name, count_date, approval_status, total_items, counted_items, difference_items, total_difference_amount, approver_id, approver_name, approve_time, count_time, adjuster_id, adjuster_name, adjust_time, remark, create_by, create_time, update_by, update_time from erp_inventory_count
    </sql>

    <select id="selectErpInventoryCountList" parameterType="ErpInventoryCount" resultMap="ErpInventoryCountResult">
        <include refid="selectErpInventoryCountVo"/>
        <where>  
            <if test="countNo != null  and countNo != ''"> and count_no like concat('%', #{countNo}, '%')</if>
            <if test="countName != null  and countName != ''"> and count_name like concat('%', #{countName}, '%')</if>
            <if test="countType != null  and countType != ''"> and count_type = #{countType}</if>
            <if test="warehouseId != null "> and warehouse_id = #{warehouseId}</if>
            <if test="warehouseCode != null  and warehouseCode != ''"> and warehouse_code like concat('%', #{warehouseCode}, '%')</if>
            <if test="warehouseName != null  and warehouseName != ''"> and warehouse_name like concat('%', #{warehouseName}, '%')</if>
            <if test="countDate != null "> and count_date = #{countDate}</if>
            <if test="approvalStatus != null  and approvalStatus != ''"> and approval_status = #{approvalStatus}</if>
            <if test="totalItems != null "> and total_items = #{totalItems}</if>
            <if test="countedItems != null "> and counted_items = #{countedItems}</if>
            <if test="differenceItems != null "> and difference_items = #{differenceItems}</if>
            <if test="totalDifferenceAmount != null "> and total_difference_amount = #{totalDifferenceAmount}</if>
            <if test="approverId != null "> and approver_id = #{approverId}</if>
            <if test="approverName != null  and approverName != ''"> and approver_name like concat('%', #{approverName}, '%')</if>
            <if test="approveTime != null "> and approve_time = #{approveTime}</if>
            <if test="countTime != null "> and count_time = #{countTime}</if>
            <if test="adjusterId != null "> and adjuster_id = #{adjusterId}</if>
            <if test="adjusterName != null  and adjusterName != ''"> and adjuster_name like concat('%', #{adjusterName}, '%')</if>
            <if test="adjustTime != null "> and adjust_time = #{adjustTime}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectErpInventoryCountById" parameterType="Long" resultMap="ErpInventoryCountResult">
        <include refid="selectErpInventoryCountVo"/>
        where id = #{id}
    </select>

    <select id="selectErpInventoryCountByCountNo" resultMap="ErpInventoryCountResult">
        <include refid="selectErpInventoryCountVo"/>
        where count_no = #{countNo}
    </select>

    <select id="selectErpInventoryCountStatistics" parameterType="ErpInventoryCount" resultMap="ErpInventoryCountResult">
        <include refid="selectErpInventoryCountVo"/>
        <where>  
            <if test="countType != null  and countType != ''"> and count_type = #{countType}</if>
            <if test="warehouseId != null "> and warehouse_id = #{warehouseId}</if>
            <if test="approvalStatus != null  and approvalStatus != ''"> and approval_status = #{approvalStatus}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
        order by create_time desc
    </select>


