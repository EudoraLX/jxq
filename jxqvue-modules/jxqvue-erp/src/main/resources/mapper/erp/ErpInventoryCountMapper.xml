    <delete id="deleteErpInventoryCountById" parameterType="Long">
        delete from erp_inventory_count where id = #{id}
    </delete>

    <delete id="deleteErpInventoryCountByIds" parameterType="String">
        delete from erp_inventory_count where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 查询盘点差异列表 -->
    <select id="selectCountDifferences" parameterType="ErpInventoryCount" resultMap="ErpInventoryCountResult">
        <include refid="selectErpInventoryCountVo"/>
        where status = '2' and difference_items > 0
        <if test="warehouseId != null"> and warehouse_id = #{warehouseId}</if>
        <if test="countType != null and countType != ''"> and count_type = #{countType}</if>
        order by count_date desc
    </select>
