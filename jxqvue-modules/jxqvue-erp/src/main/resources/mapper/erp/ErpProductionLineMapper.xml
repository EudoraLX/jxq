<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxqvue.erp.mapper.ErpProductionLineMapper">
    
    <resultMap type="ErpProductionLine" id="ErpProductionLineResult">
        <result property="id"    column="id"    />
        <result property="productionLineCode"    column="production_line_code"    />
        <result property="productionLineName"    column="production_line_name"    />
        <result property="productionLineType"    column="production_line_type"    />
        <result property="departmentId"    column="department_id"    />
        <result property="departmentName"    column="department_name"    />
        <result property="location"    column="location"    />
        <result property="length"    column="length"    />
        <result property="width"    column="width"    />
        <result property="height"    column="height"    />
        <result property="designCapacity"    column="design_capacity"    />
        <result property="actualCapacity"    column="actual_capacity"    />
        <result property="capacityUnit"    column="capacity_unit"    />
        <result property="efficiencyRate"    column="efficiency_rate"    />
        <result property="taktTime"    column="takt_time"    />
        <result property="cycleTime"    column="cycle_time"    />
        <result property="status"    column="status"    />
        <result property="isActive"    column="is_active"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectErpProductionLineVo">
        select id, production_line_code, production_line_name, production_line_type, department_id, department_name, location, length, width, height, design_capacity, actual_capacity, capacity_unit, efficiency_rate, takt_time, cycle_time, status, is_active, remark, create_by, create_time, update_by, update_time, del_flag from erp_production_line
    </sql>

    <select id="selectErpProductionLineList" parameterType="ErpProductionLine" resultMap="ErpProductionLineResult">
        <include refid="selectErpProductionLineVo"/>
        <where>  
            <if test="productionLineCode != null  and productionLineCode != ''"> and production_line_code like concat('%', #{productionLineCode}, '%')</if>
            <if test="productionLineName != null  and productionLineName != ''"> and production_line_name like concat('%', #{productionLineName}, '%')</if>
            <if test="productionLineType != null  and productionLineType != ''"> and production_line_type = #{productionLineType}</if>
            <if test="departmentId != null "> and department_id = #{departmentId}</if>
            <if test="departmentName != null  and departmentName != ''"> and department_name like concat('%', #{departmentName}, '%')</if>
            <if test="location != null  and location != ''"> and location like concat('%', #{location}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="isActive != null  and isActive != ''"> and is_active = #{isActive}</if>
            and del_flag = '0'
        </where>
    </select>
    
    <select id="selectErpProductionLineById" parameterType="Long" resultMap="ErpProductionLineResult">
        <include refid="selectErpProductionLineVo"/>
        where id = #{id} and del_flag = '0'
    </select>

    <select id="selectAvailableProductionLines" resultMap="ErpProductionLineResult">
        <include refid="selectErpProductionLineVo"/>
        where is_active = '1' and status = '1' and del_flag = '0'
        order by production_line_code
    </select>
        
    <insert id="insertErpProductionLine" parameterType="ErpProductionLine" useGeneratedKeys="true" keyProperty="id">
        insert into erp_production_line
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productionLineCode != null and productionLineCode != ''">production_line_code,</if>
            <if test="productionLineName != null and productionLineName != ''">production_line_name,</if>
            <if test="productionLineType != null">production_line_type,</if>
            <if test="departmentId != null">department_id,</if>
            <if test="departmentName != null">department_name,</if>
            <if test="location != null">location,</if>
            <if test="length != null">length,</if>
            <if test="width != null">width,</if>
            <if test="height != null">height,</if>
            <if test="designCapacity != null">design_capacity,</if>
            <if test="actualCapacity != null">actual_capacity,</if>
            <if test="capacityUnit != null">capacity_unit,</if>
            <if test="efficiencyRate != null">efficiency_rate,</if>
            <if test="taktTime != null">takt_time,</if>
            <if test="cycleTime != null">cycle_time,</if>
            <if test="status != null">status,</if>
            <if test="isActive != null">is_active,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productionLineCode != null and productionLineCode != ''">#{productionLineCode},</if>
            <if test="productionLineName != null and productionLineName != ''">#{productionLineName},</if>
            <if test="productionLineType != null">#{productionLineType},</if>
            <if test="departmentId != null">#{departmentId},</if>
            <if test="departmentName != null">#{departmentName},</if>
            <if test="location != null">#{location},</if>
            <if test="length != null">#{length},</if>
            <if test="width != null">#{width},</if>
            <if test="height != null">#{height},</if>
            <if test="designCapacity != null">#{designCapacity},</if>
            <if test="actualCapacity != null">#{actualCapacity},</if>
            <if test="capacityUnit != null">#{capacityUnit},</if>
            <if test="efficiencyRate != null">#{efficiencyRate},</if>
            <if test="taktTime != null">#{taktTime},</if>
            <if test="cycleTime != null">#{cycleTime},</if>
            <if test="status != null">#{status},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateErpProductionLine" parameterType="ErpProductionLine">
        update erp_production_line
        <trim prefix="SET" suffixOverrides=",">
            <if test="productionLineCode != null and productionLineCode != ''">production_line_code = #{productionLineCode},</if>
            <if test="productionLineName != null and productionLineName != ''">production_line_name = #{productionLineName},</if>
            <if test="productionLineType != null">production_line_type = #{productionLineType},</if>
            <if test="departmentId != null">department_id = #{departmentId},</if>
            <if test="departmentName != null">department_name = #{departmentName},</if>
            <if test="location != null">location = #{location},</if>
            <if test="length != null">length = #{length},</if>
            <if test="width != null">width = #{width},</if>
            <if test="height != null">height = #{height},</if>
            <if test="designCapacity != null">design_capacity = #{designCapacity},</if>
            <if test="actualCapacity != null">actual_capacity = #{actualCapacity},</if>
            <if test="capacityUnit != null">capacity_unit = #{capacityUnit},</if>
            <if test="efficiencyRate != null">efficiency_rate = #{efficiencyRate},</if>
            <if test="taktTime != null">takt_time = #{taktTime},</if>
            <if test="cycleTime != null">cycle_time = #{cycleTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteErpProductionLineById" parameterType="Long">
        update erp_production_line set del_flag = '1' where id = #{id}
    </delete>

    <delete id="deleteErpProductionLineByIds" parameterType="String">
        update erp_production_line set del_flag = '1' where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
