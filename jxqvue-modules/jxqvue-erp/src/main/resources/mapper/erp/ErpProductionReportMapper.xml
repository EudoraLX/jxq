        <result property="reworkQuantity"    column="rework_quantity"    />
        <result property="actualHours"    column="actual_hours"    />
        <result property="qualityRate"    column="quality_rate"    />
        <result property="approvalStatus"    column="approval_status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <!-- 关联字段 -->
        <result property="orderCode"    column="order_code"    />
        <result property="productCode"    column="material_code"    />
        <result property="productName"    column="material_name"    />
        <result property="unitId"    column="unit_id"    />
        <result property="unitCode"    column="unit_code"    />
        <result property="unitName"    column="unit_name"    />
        <result property="processCode"    column="process_code"    />
        <result property="processName"    column="process_name"    />
        <result property="operatorName"    column="operator_name"    />
    </resultMap>

    <sql id="selectErpProductionReportVo">
        select r.id, r.report_code, r.production_order_id, r.product_id, r.process_id, r.operator_id, 
               r.report_date, r.actual_quantity, r.qualified_quantity, r.defective_quantity, r.scrap_quantity, 
               r.rework_quantity, r.actual_hours, r.quality_rate, r.approval_status, r.remark, 
               r.create_by, r.create_time, r.update_by, r.update_time,
               po.order_code,
               mm.material_code, mm.material_name,
               u.id as unit_id, u.unit_code, u.unit_name,
               p.process_code, p.process_name,
               su.nick_name as operator_name
        from erp_production_report r
        left join erp_production_order po on r.production_order_id = po.id
        left join erp_material_master mm on r.product_id = mm.id
        left join erp_unit u on mm.unit_id = u.id
        left join erp_process p on r.process_id = p.id
        left join sys_user su on r.operator_id = su.user_id
    </sql>

    <select id="selectErpProductionReportList" parameterType="ErpProductionReport" resultMap="ErpProductionReportResult">
        <include refid="selectErpProductionReportVo"/>
        <where>  
            <if test="reportCode != null  and reportCode != ''"> and r.report_code like concat('%', #{reportCode}, '%')</if>
            <if test="productionOrderId != null "> and r.production_order_id = #{productionOrderId}</if>
            <if test="productId != null "> and r.product_id = #{productId}</if>
            <if test="productName != null  and productName != ''"> and mm.material_name like concat('%', #{productName}, '%')</if>
            <if test="processId != null "> and r.process_id = #{processId}</if>
            <if test="processName != null  and processName != ''"> and p.process_name like concat('%', #{processName}, '%')</if>
            <if test="operatorId != null "> and r.operator_id = #{operatorId}</if>
            <if test="operatorName != null  and operatorName != ''"> and su.nick_name like concat('%', #{operatorName}, '%')</if>
            <if test="reportDate != null "> and r.report_date = #{reportDate}</if>
            <if test="approvalStatus != null  and approvalStatus != ''"> and r.approval_status = #{approvalStatus}</if>
            <if test="params.beginReportDate != null and params.beginReportDate != '' and params.endReportDate != null and params.endReportDate != ''"> and r.report_date between #{params.beginReportDate} and #{params.endReportDate}</if>
        </where>
        order by r.create_time desc
    </select>
    
    <select id="selectErpProductionReportById" parameterType="Long" resultMap="ErpProductionReportResult">
        <include refid="selectErpProductionReportVo"/>
        where r.id = #{id}
    </select>
        
