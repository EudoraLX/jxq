<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxqvue.aichat.mapper.ChatSessionMapper">
    
    <resultMap type="ChatSession" id="ChatSessionResult">
        <result property="sessionId"    column="session_id"    />
        <result property="userId"    column="user_id"    />
        <result property="sessionName"    column="session_name"    />
        <result property="lastMessageTime"    column="last_message_time"    />
        <result property="messageCount"    column="message_count"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectChatSessionVo">
        select session_id, user_id, session_name, last_message_time, message_count, status, create_by, create_time, update_by, update_time, remark from ai_chat_session
    </sql>

    <select id="selectChatSessionList" parameterType="ChatSession" resultMap="ChatSessionResult">
        <include refid="selectChatSessionVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="sessionName != null  and sessionName != ''"> and session_name like concat('%', #{sessionName}, '%')</if>
            <if test="lastMessageTime != null "> and last_message_time = #{lastMessageTime}</if>
            <if test="messageCount != null "> and message_count = #{messageCount}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by last_message_time desc
    </select>
    
    <select id="selectChatSessionBySessionId" parameterType="Long" resultMap="ChatSessionResult">
        <include refid="selectChatSessionVo"/>
        where session_id = #{sessionId}
    </select>

    <select id="selectChatSessionListByUserId" parameterType="Long" resultMap="ChatSessionResult">
        <include refid="selectChatSessionVo"/>
        where user_id = #{userId} and status = '0'
        order by last_message_time desc
    </select>
        
    <insert id="insertChatSession" parameterType="ChatSession" useGeneratedKeys="true" keyProperty="sessionId">
        insert into ai_chat_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="sessionName != null and sessionName != ''">session_name,</if>
            <if test="lastMessageTime != null">last_message_time,</if>
            <if test="messageCount != null">message_count,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="sessionName != null and sessionName != ''">#{sessionName},</if>
            <if test="lastMessageTime != null">#{lastMessageTime},</if>
            <if test="messageCount != null">#{messageCount},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateChatSession" parameterType="ChatSession">
        update ai_chat_session
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="sessionName != null and sessionName != ''">session_name = #{sessionName},</if>
            <if test="lastMessageTime != null">last_message_time = #{lastMessageTime},</if>
            <if test="messageCount != null">message_count = #{messageCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where session_id = #{sessionId}
    </update>

    <update id="updateLastMessageTime" parameterType="Long">
        update ai_chat_session set last_message_time = now() where session_id = #{sessionId}
    </update>

    <update id="updateMessageCount" parameterType="Long">
        update ai_chat_session set message_count = (select count(*) from ai_chat_message where session_id = #{sessionId} and status = '0') where session_id = #{sessionId}
    </update>

    <delete id="deleteChatSessionBySessionId" parameterType="Long">
        update ai_chat_session set status = '1' where session_id = #{sessionId}
    </delete>

    <delete id="deleteChatSessionBySessionIds" parameterType="String">
        update ai_chat_session set status = '1' where session_id in 
        <foreach item="sessionId" collection="array" open="(" separator="," close=")">
            #{sessionId}
        </foreach>
    </delete>
</mapper>
